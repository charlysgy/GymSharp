<UserControl x:Class="GymSharp.MVVM.View.parametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GymSharp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#ADADAD">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Foreground="White"
                   Text="Paramètres"
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Column="1"
                   Grid.Row="0"
                   FontSize="40"
                   FontFamily="Berlin Sans FB"
                   Margin="0, 0, 20, 0"/>
        

        <RadioButton Grid.Row="0"
                     Grid.Column="0"
                     Grid.RowSpan="1"
                     Grid.ColumnSpan="1">
            <RadioButton.Template>
                <ControlTemplate>
                    <Border>
                        <Image Source="../../ressources/Images/logo_gym.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="100"/>
                    </Border>
                </ControlTemplate>
            </RadioButton.Template>
        </RadioButton>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    ScrollViewer.VerticalScrollBarVisibility="Auto" 
                    CanVerticallyScroll="True">

