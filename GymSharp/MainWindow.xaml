<Window x:Class="GymSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Background="Transparent">
    <Border Background="#ADADAD">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="266"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image Source="ressources/Images/logo_gym.png" 
                   Height="250"/>

            <StackPanel Grid.Row="1">
                <Menu HorizontalContentAlignment="Center">
                    <MenuItem Header="_Menu">
                        <RadioButton Content="Profil"
                             Style="{StaticResource StyleBoutons}"
                                     Background="Black"/>
                        <RadioButton Content="Liste Exercices"
                             Style="{StaticResource StyleBoutons}"
                                     Background="Black"/>
                        <RadioButton Content="Nutrition"
                             Style="{StaticResource StyleBoutons}"
                                     Background="Black"/>
                        <RadioButton Content="Paramètres"
                             Style="{StaticResource StyleBoutons}"
                                     Background="Black"/>
                    </MenuItem>
                </Menu>
            </StackPanel>

            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="Les anectodes qui défileront"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="40"
                     Background="#ADADAD"/>

            <TextBox Grid.Row="1" Grid.Column="1"
                     Text="Ici apparaîtra la fenêtre sélectionnée"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"
                     FontSize="25"
                     Background="Azure"/>

        </Grid>
    </Border>
</Window>