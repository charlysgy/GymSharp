<Application x:Class="GymSharp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GymSharp"
             Startup="LookForFirstStart" 
             StartupUri="/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Theme/StyleBoutons.xaml"/>
                <ResourceDictionary Source="./Theme/StyleMenu.xaml"/>
                <ResourceDictionary Source="./Theme/StyleCheckBox.xaml"/>
                <ResourceDictionary Source="./Theme/StyleTextBox.xaml"/>
                <ResourceDictionary Source="./Theme/StyleToggleButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
