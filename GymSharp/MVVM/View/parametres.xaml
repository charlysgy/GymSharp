            <TextBlock Foreground="White"
                       Text="Profile"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Berlin Sans FB"
                       FontSize="35"/>
            <TextBlock Foreground="White"
                       Text="Sous-profile"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontFamily="Berlin Sans FB"
                       FontSize="30"
                       Margin="10, 0, 0, 0"/>
            <TextBlock Foreground="White"
                       Text="Trucs modifiables"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Berlin Sans FB"
                       FontSize="25"
                       Margin="10, 0, 0, 0"/>
