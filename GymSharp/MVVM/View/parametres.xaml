                         Grid.Column="0"
                         x:Name="ButtonProfile"
                         GroupName="Profile">
                <RadioButton.Template>
                    <ControlTemplate>
                        <TextBlock Foreground="White"
                                   Text="Profile"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontFamily="Berlin Sans FB"
                                   FontSize="20"
                                   Margin="5, 0, 0, 0"/>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <StackPanel>
                <RadioButton>
                    <RadioButton.Template>
                        <ControlTemplate>
                            <TextBlock Foreground="White"
                                       Text="Sous-profile1"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontFamily="Berlin Sans FB"
                                       FontSize="15"
                                       Margin="10, 0, 0, 0"/>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
                <RadioButton>
                    <RadioButton.Template>
                        <ControlTemplate>
                            <TextBlock Foreground="White"
                                       Text="Sous-profile2"
